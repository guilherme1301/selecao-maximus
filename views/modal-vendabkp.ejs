
<% include partials/modal-venda.ejs %>

<!-- Modal -->


    <div class="table-wrapper">
        <% if (venda.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Valor</th>
                        <th scope="col">Data de Realização</th>
                        <th scope="col">Saldo devedor</th>
                    </tr>
                </thead>
                <tbody>
                    <% vendas.forEach((venda, index) => { %>
                        <tr>
                            <th scope="row"><%= venda.vendasId %></th>
                            <th scope="row"><%= venda.valor %></th>
                            <td><%= venda.dataRealizacao %></td>
                            <td><%= venda.saldoDevedor %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">Não há vendas cadastrados. Clique <a href="/vendas/<%=venda.clientesId%>" >aqui</a> para adicionar vendas.</p>
        <% } %>
    </div>
<% include partials/modal-venda-footer.ejs %>
