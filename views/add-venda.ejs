<% include partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-cliente-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="valor" id="valor" placeholder="Valor" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="date" class="form-control" name="dataRealizacao" id="datarealizacao" placeholder="Data de realizacao" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="saldoDevedor" id="saldodevedor" placeholder="Saldo Devedor" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="clientesId" id="clientesId" placeholder="<%= cliente.clientesId %>" readonly>
                </div>
            </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Cadastrar venda</button>
        </form>
    </div>
</div>
</body>
</html>
